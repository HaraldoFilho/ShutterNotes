<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/flickr_photo_thumb_size">

    <ImageView
        android:id="@+id/imagePhoto"
        android:layout_width="@dimen/flickr_photo_thumb_size"
        android:layout_height="@dimen/flickr_photo_thumb_size"
        android:layout_marginEnd="@dimen/item_margin" />

    <LinearLayout
        android:id="@+id/layoutPhotoText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imagePhoto">

        <TextView
            android:id="@+id/textPhotoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/flickr_photo_title_size"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_marginEnd="@dimen/item_text_margin_right" />

        <TextView
            android:id="@+id/textPhotoDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/item_text_margin_right"
            android:layout_marginBottom="@dimen/item_margin"
            android:textSize="@dimen/flickr_photo_description_size" />

    </LinearLayout>

</RelativeLayout>